/**index.wxss**/
.content {
  color: #fff;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-image: url("../assets/img/bcg.png");
  background-repeat: repeat;
  padding-top:30rpx;
}
.screen{
  color: #000;
  background-color: #ffffff;
  border-radius:3rpx;
  text-align:right;
  width:720rpx;
  height:100rpx;
  line-height: 100rpx;
  padding-right: 20rpx;
  margin-bottom: 30rpx;
}
.btnGroup{
  display: flex;
  flex-direction:row;
  color: #fff;
}
.item{
  width:160rpx;
  min-height:150rpx;
  margin:10rpx;
  text-shadow:0 1rpx 1rpx rgb(0,0,0,.3);
  border-radius:5rpx;
  text-align:center;
  line-height:150rpx;
}
.orange{
  color:#fef4e9;
  border:solid 1rpx #da7c0c;
  background: #f78d1d;
}
.blue{
  color:#d9eef7;
  border:solid 1rpx #da7c0c;
  background: #0095cd;
}